    <bean name="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <tx:annotation-driven proxy-target-class="true"/>

    <bean id="jdbcDao" abstract="true" class="org.springframework.jdbc.core.support.JdbcDaoSupport">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean name="userDao" class="com.mycelium.rolefen.model.dao.JdbcCrudDao" parent="jdbcDao">
        <property name="tableName" value="person"/>
        <property name="beanClass" value="com.mycelium.rolefen.model.entities.UserEntity"/>
        <property name="fieldMapping">
            <map>
                <entry key="login" value="login"/>
                <entry key="first_name" value="firstName"/>
                <entry key="last_name" value="lastName"/>                
                <entry key="role_id" value="roleId"/>                
            </map>
        </property>
    </bean>
</beans>